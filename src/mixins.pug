mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, description, role)
  if !role
    img(src=require(`images/${path}`) class=className alt=description)
  else
    img(src=require(`images/${path}`) class=className alt=description role=`${role}`)

mixin social(mod)
  div(class="social social__" + mod)
    ul.social__list
      li.social__item
        a(href="#").social__link
          +icon('insta', 'social__icon')
        li.social__item
          a(href="#").social__link
            +icon('vk', 'social__icon')
        li.social__item
          a(href="#").social__link
            +icon('github', 'social__icon')

