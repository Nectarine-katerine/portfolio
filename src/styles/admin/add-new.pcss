.add-new {

  @include phones {
    display: flex;
    align-items: center;
  }
}

.add-new__btn {
  color: #ffffff;
  font-size: 72px;
  font-weight: 300;
  padding: 40px 60px;
  border: 2px solid #ffffff;
  border-radius: 100%;
  margin-bottom: 30px;

  @include phones {
    padding: 18px 25px;
    margin: 0 15px 0 0;
    font-size: 24px;
  }
}

.add-new__text {
  color: #ffffff;
  font-size: 18px;
  font-weight: 700;
  text-align: center;
}