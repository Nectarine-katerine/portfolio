.tags {
  display: flex;
  margin-bottom: 40px;
}

.tags__item {
  display: flex;
  padding: 10px 20px;
  border-radius: 15px;
  background-color: #f4f4f4;
  margin-right: 9px;
  
  &:last-child {
    margin-right: 0;
  }
}

.tags__name {
  color: rgba(#283340, 0.7);
  font-size: 13px;
  font-weight: 600;
  margin-right: 9px;
}