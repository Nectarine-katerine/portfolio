.btn {
  padding: 28px 120px;
  color: #ffffff;
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  background-color: #ffffff;
  background-image: linear-gradient(to right, #ad00ed 0%, #5500f2 100%);
  border-radius: 40px 5px;
  &:hover {
    background-image: linear-gradient(to right, #bb00ff 0%, #5900ff 100%);
  }

  @include phones {
    padding: 24px 80px;
  }
}
