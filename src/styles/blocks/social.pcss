.social {
  @include phones {
    display: none;
  }
}
.social__list {
  display: flex;
  list-style: none;
}

.social__item {
  margin-right: 40px;
  &:last-child {
    margin-right: 0;
  }
}
.social__icon {
  width: 25px;
  fill: rgba(#fff, .5);
  transition: fill .3s;
}

.social__link {
  &:hover .social__icon {
    fill: $orange;
    transition: fill .3s;
  }
}