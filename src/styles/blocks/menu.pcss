.header__menu {
  flex: 1;
  display: flex;
  justify-content: center;
  margin: 0 20px;
}

.menu__list {
  display: flex;
  justify-content: space-between;
}

.menu__link {
  display: inline-block;
  text-decoration: none;
  transition: color .3s;

  &:hover {
    color: $orange;
    transition: color .3s;
  }
}

.menu__item {
  margin-right: 60px;
  &:last-child {
    margin-right: 0;
  }
}

